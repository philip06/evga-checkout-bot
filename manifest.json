{
  "manifest_version": 3,

  "name": "EVGA Checkout Bot",
  "description": "This extension will monitor discord channel for changes, then execute a checkout script on evga b stock",
  "version": "0.6",

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
   },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
	  "activeTab",
    "storage",
    "scripting",
    "notifications"
   ],
   "host_permissions": [
    "*://*/*"
   ]
}